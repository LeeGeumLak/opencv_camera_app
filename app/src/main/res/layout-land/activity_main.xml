<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".activity.MainActivity"
    tools:ignore="MissingDefaultResource">

    <org.opencv.android.JavaCameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="100dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/Button_sunglasses"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="489dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="181dp"
        android:layout_marginRight="181dp"
        android:background="@drawable/sunglasses"
        android:visibility="invisible" />

    <Button
        android:id="@+id/Button_mask"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Button_sunglasses"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="489dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="181dp"
        android:layout_marginRight="183dp"
        android:background="@drawable/cool"
        android:visibility="invisible" />

    <Button
        android:id="@+id/Button_Sticker"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="570dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="#7d010000"
        android:text="Sticker"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/Button_HSV"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Button_Gray"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="566dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="104dp"
        android:background="#7d010000 "
        android:text="HSV"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/Button_Gray"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Button_RGB"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="570dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="#7d010000"
        android:text="Gray"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/Button_RGB"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Button_Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="570dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="#7d010000"
        android:text="RGB"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/Button_Text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Button_Sticker"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="570dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="#7d010000"
        android:text="Text"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/Button_capture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/camera_ok" />

    <Button
        android:id="@+id/Button_change"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/change" />

    <Button
        android:id="@+id/Button_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="357dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/settings" />

    <Button
        android:id="@+id/Button_webRtc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="307dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/video_camera"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/Textview_webRtc"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="312dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="화상통화"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:visibility="invisible"/>

    <Switch
        android:id="@+id/Switch_notification"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="257dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:switchPadding="30dp"
        android:text="알람"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/Button_gallery"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gallery" />

    <Button
        android:id="@+id/Button_filter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/filter_change" />
</RelativeLayout>